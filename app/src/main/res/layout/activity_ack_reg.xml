<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/reg_ack_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="75dp"
        app:srcCompat="@drawable/regcomp"

        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/reg_ack_text"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Registration complete"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="#923CFF"
        android:textStyle="bold"
        android:layout_below="@id/reg_ack_img"
        android:layout_marginLeft="80dp"
        />

    <Button

        android:id="@+id/reg_ack_cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:text="Continue"
        android:background="@drawable/round_btn"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/reg_ack_text"
        android:layout_marginTop="50dp"


        />
</RelativeLayout>